# Litte CMake script providing version information to the rest of the 
# plugin's build system

SET(GCCXML_PLUGIN_VERSION_MAJOR 1)
SET(GCCXML_PLUGIN_VERSION_MINOR 0)
SET(GCCXML_PLUGIN_VERSION_PATCH 2)

# VERSION, in format M.m.p, where M is MAJOR, m is MINOR, and p is PATCH version.
SET(GCCXML_PLUGIN_VERSION_FULL "${GCCXML_PLUGIN_VERSION_MAJOR}.${GCCXML_PLUGIN_VERSION_MINOR}.${GCCXML_PLUGIN_VERSION_PATCH}")

# VERSION OF THE FORMAT 0x0M0m0p0
SET(GCCXML_PLUGIN_BASEVER "0x0${GCCXML_PLUGIN_VERSION_MAJOR}0${GCCXML_PLUGIN_VERSION_MINOR}0${GCCXML_PLUGIN_VERSION_PATCH}0")

# vim: set ft=cmake:
